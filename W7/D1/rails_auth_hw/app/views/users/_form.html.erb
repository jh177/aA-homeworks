<% action = (user.persisted? ? user_url(user) : users_url) %>
<% action = (user.persisted? ? "patch" : "post") %>
<% message = (user.persisted? ? "Update user" : "Create user") %>

<form action="<%= action %>" method="post">
  <input name="_method" type="hidden" value="<%= method %>">
  <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

  <label for="user_username">Username</label>
  <input id = "user_name" name="user[username]" type="text">

  <label for="user_password">Username</label>
  <input id = "user_password" name="user_password" type="text">
  <br>

  <input type="submit" value="<%= message %>">
</form>